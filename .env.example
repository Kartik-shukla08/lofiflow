# Example environment variables (copy to `.env.local` and fill values)
# For local development: set `VITE_ENABLE_FIREBASE=true` and fill the Firebase config below
# Firebase web config values are client-side and are safe to include as VITE_* variables.
VITE_ENABLE_FIREBASE=false
# Optional Firebase keys (only needed if VITE_ENABLE_FIREBASE=true)
VITE_FIREBASE_API_KEY=YOUR_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=YOUR_PROJECT_ID.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=YOUR_PROJECT_ID.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=SENDER_ID
VITE_FIREBASE_APP_ID=APP_ID

# Local emulator options (for dev/testing)
# Set VITE_FIREBASE_USE_EMULATORS=true to connect SDK to local emulators
VITE_FIREBASE_USE_EMULATORS=false
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIREBASE_EMULATOR_FIRESTORE_PORT=8080
VITE_FIREBASE_EMULATOR_AUTH_PORT=9099
VITE_FIREBASE_EMULATOR_DATABASE_PORT=9000
