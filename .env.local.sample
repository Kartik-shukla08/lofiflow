# Copy to `.env.local` for emulator testing (no real credentials needed)
VITE_ENABLE_FIREBASE=true
VITE_FIREBASE_USE_EMULATORS=true
VITE_FIREBASE_API_KEY=demo
VITE_FIREBASE_AUTH_DOMAIN=demo-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=demo-project
VITE_FIREBASE_STORAGE_BUCKET=demo-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=0
VITE_FIREBASE_APP_ID=1

# Emulator host/ports (match firebase.json)
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIREBASE_EMULATOR_FIRESTORE_PORT=8080
VITE_FIREBASE_EMULATOR_AUTH_PORT=9099
VITE_FIREBASE_EMULATOR_DATABASE_PORT=9000
VITE_FIREBASE_USE_EMULATORS=true
# When true, `node scripts/seed-firebase.cjs` will create sample rooms/messages in the emulator
# Default: false
SEED_SAMPLE_ROOMS=false
